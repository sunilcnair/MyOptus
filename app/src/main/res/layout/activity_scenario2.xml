<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scenario2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.com.myoptus.Scenario2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scenario 2"
        android:textStyle="bold"
        android:id="@+id/scenario2"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a destination:"
        android:textStyle="bold"
        android:layout_marginTop="50dip"
       android:layout_below="@+id/scenario2"
        android:textSize="20dp"
        android:id="@+id/textView5" />

<Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dip"
    android:id="@+id/spinner"
    android:layout_below="@+id/textView5" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dip"
        android:id = "@+id/layout2"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="50dip"

        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView1"
            android:text="Mode of transport:"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_gravity="start|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <Button
            android:text="@string/navigate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/navbutton"

            />
    </LinearLayout>
</RelativeLayout>
